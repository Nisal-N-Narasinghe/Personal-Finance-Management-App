<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="681dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ExpensesimageView4"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            app:srcCompat="@drawable/expenses_img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <ScrollView
                android:layout_width="407dp"
                android:layout_height="517dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/ExpensesButton3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/utility_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:stateListAnimator="@android:anim/cycle_interpolator"
                        android:text="Utility"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/telecommunication"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Telecommunication"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton8"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/health2_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Health"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton13"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/food_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Food"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton18"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/grocerise_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Groceries"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton14"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/loan3"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Loan"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton15"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/finance_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Leasing"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton16"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/card2"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Transactions"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ExpensesButton17"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/btn_background"
                        android:drawableLeft="@drawable/other_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Other"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>